{% extends 'layout_ak/base.html.twig' %}
{% block sub_head_title %}Admin Dashboard -Upload Logs{% endblock %}
{% block body %}
<h1>Upload Logs</h1>
<div class="wrapper wrapper-content animated fadeInRight">
  {% if csvupload_log_detail is defined %}
  <div class="row">
    <div class="col-md-12">
      <table id="tbl_applications" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>ID</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Total CSV Rows</th>
            <th>Total Row Uploaded</th>
            <th>File Size</th>
            <th>Detail</th>
            
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>ID</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Total CSV Rows</th>
            <th>Total Row Uploaded</th>
            <th>File Size</th>
            <th>Detail</th>
            
          </tr>
        </tfoot>
        <tbody>
          {% if csvupload_log is defined %}
          <tr>
            <td>{{ csvupload_log.id }}</td>
            <td>{{ csvupload_log.startTime }}</td>
            <td>{{ csvupload_log.endTime }}</td>
            <td>{{ csvupload_log.totalCsvRow }}</td>
            <td>{{ csvupload_log.totalRowUploaded }}</td>
            <td>{{ csvupload_log.fileSize }}</td>
            <td>{{ csvupload_log.detail }}</td>
          </tr>
          {% else %}
              <tr>
                  <td colspan="7" align="center">Not found!</td>
             </tr>
          {% endif %}
        </tbody>
      </table>
    </div>
  </div>
  {% else %}
  <div class="row">
    <div class="col-md-12">
      <table id="tbl_applications" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>ID</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Total CSV Rows</th>
            <th>Total Rows Uploaded</th>
            <th>Size</th>
            <th>Detail</th>
            <th>Action</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>ID</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Total CSV Rows</th>
            <th>Total Rows Uploaded</th>
            <th>Size</th>
            <th>Detail</th>
            <th>Action</th>
          </tr>
        </tfoot>
        <tbody>
          {% for csvupload_log in csvupload_logs %}
          <tr>
            <td>{{ csvupload_log.id }}</td>
            <td>{{ csvupload_log.startTime }}</td>
            <td>{{ csvupload_log.endTime }}</td>
            <td>{{ csvupload_log.totalCsvRow }}</td>
            <td>{{ csvupload_log.totalCsvRow }}</td>
            <td>{{ csvupload_log.fileSize }}</td>
            <td>{{ csvupload_log.detail }}</td>
            <td><a href="{{ path('event_csvupload_logs_delete', {'id': csvupload_log.id}) }}">Delete</a> || <a href="#">Detail</a></td>
          </tr>
          {% else %}
              <tr>
                  <td colspan="8" align="center">Not found!</td>
             </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}