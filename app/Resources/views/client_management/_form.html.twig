<div class="col-lg-4">
    <div class="ibox float-e-margins" style="padding:20px">
        <div class="ibox-title-transparent">
            <h3 class="font-bold">{{ mode == 1 ? 'Edit Client' : 'Add Client' }}</h3>
        </div>
        <div class="ibox-content-transparent">
            <div class="panel" style="margin:0px">
                <form action="{{ app.request.uri }}" class="form" method="post" novalidate>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group">
                                <label for="exampleInputName">Client Name</label>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter Client Name' }}) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <label>App Title</label>
                                {{ form_widget(form.appTitle, {'attr': {'class': 'form-control list-app-title' }}) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <label>Account Type</label>
                                {{ form_widget(form.accountType, {'attr': {'class': 'form-control', 'placeholder': 'Each app title separate by comma' }}) }}
                            </div>
                        </div>
                        <div class="row" data-usagePlanType>
                            {{ form_widget(form.usagePlanType[0]) }}
                            <label for="Free">Free Plan</label>
                            <fieldset class="conditional">
                                <div style=" width: 65%; margin: 10px 50px;">
                                    <div class="row">
                                        <label for="{{ form.userLimit.vars.label }}">Users Limit</label>
                                        <input type="text" id="client_userLimit" name="client[userLimit]" class="form-control" placeholder="Default: 5,000">
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="row" data-usagePlanType>
                            {{ form_widget(form.usagePlanType[1]) }}
                            <label for="Studio">Studio Plan</label>
                            <fieldset class="conditional">
                                <div style=" width: 65%; margin: 10px 50px;">
                                    <div class="row">
                                        <label for="{{ form.userLimit.vars.label }}">Users Limit</label>
                                        <input type="text" id="client_userLimit" name="client[userLimit]" class="form-control" placeholder="Default: 20,000">
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="row" data-usagePlanType>
                            {{ form_widget(form.usagePlanType[2]) }}
                            <label for="Business">Business Plan</label>
                            <fieldset class="conditional">
                                <div style=" width: 65%; margin: 10px 50px;">
                                    <div class="row">
                                        <label for="{{ form.userLimit.vars.label }}">Users Limit</label>
                                        <input type="text" id="client_userLimit" name="client[userLimit]" class="form-control" placeholder="Default: 100,000">
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="row">
                            {% if mode == 1 %}
                            <a href="{{ path('dashboard_client_management') }}" class="btn btn-primary">Add New Client</a>
                            {% endif %}
                            <button type="submit" class="btn btn-primary">{{ mode == 1 ? 'Save' : 'Add' }}</button>
                        </div>
                    </div>
                    {{ form_widget(form._token) }}
                </form>
            </div>
        </div>
    </div>
</div>